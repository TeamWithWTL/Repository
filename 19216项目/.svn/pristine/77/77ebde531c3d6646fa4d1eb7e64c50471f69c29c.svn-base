html,body {
	width: 100%;
	height: 100%;
	overflow: hidden;
}
html {
	font-size: 14px;
	font-family: "微软雅黑", "arial, helvetica, sans-serif";
	
}
body {
	padding-top: 100px;
	padding-left: 20px;
	padding-bottom: 20px;
	padding-right: 20px;
	background: #0d8fe6 url(../images/index-bg.png) left top no-repeat;
	background-size: cover;
}
input:-webkit-autofill {
    -webkit-box-shadow: 0 0 0px 1000px white inset !important;
}
iframe {
	border: none;
}
.warpper {
	height: 100%;
}
.header {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100px;
	background: url(../images/topbg-right.png) right bottom no-repeat;
}
.logo {
	width: 360px;
	height: 100px;
	display: table-cell;
	vertical-align: middle;
	background: url(../images/topbg-left.png) no-repeat;
	padding: 5px 20px;
}
.logo img {
	width: 100%;
    height: auto;
    margin-top: -10px;
}
.menubar {
	position: absolute;
	top: 0;
	left: 340px;
	text-align: center;
	width: calc(100% - 420px);
}
.menubar ul {
	list-style: none;
	padding: 8px;
	margin: 0;
}
.menubar ul li {
	display: inline-block;
	text-align: center;
	width: 80px;
	height: 80px;
	padding: 12px 0;
	font-size: 13px;
	background: url(../images/navbg.png) no-repeat;
	background-size: auto 80px;
	background-position: 0 0;
	cursor: pointer;
	color: #FFFFFF;
}
.menubar ul li img {
	height: 40px;
}
.menubar ul li.active,
.menubar ul li:hover {
	background-position: -80px 0;
	text-decoration: none;
}
.userinfo {
	position: absolute;
	right: 50px;
	bottom: 0;
	width: 263px;
	height: 50px;
	background: url(../images/userinfo.png) bottom no-repeat;
	background-size: cover;
	color: #FFFFFF;
	padding: 13px 30px;
}
.userinfo span {
	display: inline-block;
	margin: 0 5px;
}
.userinfo span img {
	width: 30px;
	height: 30px;
	border-radius: 50%;
	background: #FFFFFF;
}
.userinfo span a {
	color: #FFFFFF;
	display: inline-block;
	margin-left: 2px;
	margin-right: 2px;
	text-decoration: none;
}
.userinfo span a:hover {
	opacity: .8;
}
.userinfo-1366 {
	display: none;
}

.main {
	width: 100%;
	height: 100%;
	background: #eaf4f8;
}

@media only screen and (min-width: 1280px) and (max-width: 1460px) {
	.userinfo {
		display: none;
	}
	.userinfo-1366 {
		display: block;
		position: absolute;
		top: 20px;
		right: 30px;
		cursor: pointer;
	}
	.userinfo-1366 .userinfo-1366-tumb > a {
		display: block;
		width: 46px;
		height: 46px;
		border-radius: 50%;
		background: #eee;
		border: 2px solid #fff;
		text-decoration: none;
	}
	.userinfo-1366 .userinfo-1366-tumb > a::after {
		content: "·";
		display: block;
		width: 100%;
		color: #FFFFFF;
		text-align: center;
		font-size: 32px;
		position: relative;
		bottom: -5px;
		line-height: .5;
		text-shadow: -8px 0 0 #FFFFFF, 8px 0 0 #FFFFFF;
	}
	.userinfo-1366 .userinfo-1366-tumb > a img {
		width: 100%;
		height: 100%;
	}
	.userinfo-1366 ul {
		display: none;
		position: absolute;
		text-align: center;
		font-weight: normal;
		color: #FFFFFF;
		right: -10px;
		top: 70px;
		padding: 6px 5px;
		background: rgba(0,0,0,0.6);
		border-radius: 4px;
	}
	.userinfo-1366 ul::before {
		content: "";
		position: absolute;
		top: -5px;
		right: 30px;
		width:0;
	    height:0;
	    border-width:0 5px 5px;
	    border-style:solid;
	    border-color:transparent transparent rgba(0,0,0,0.6);
	}
	.userinfo-1366 ul::after {
		content: "";
		position: absolute;
		top: -5px;
		left: 0;
		width: 100%;
		height: 5px;
	}
	.userinfo-1366 ul span {
		display: inline-block;
		float: left;
		color: #FFFFFF;
		margin: 0 4px;
		font-size: 14px;
		max-width: 90px;
		height: 18px;
		text-overflow: ellipsis;
		white-space: nowrap;
		overflow: hidden;
		border-right: 1px solid #fff;
		padding-right: 10px;
		line-height: 18px;
	}
	.userinfo-1366 ul a {
		display: inline-block;
		float: left;
		color: #FFFFFF;
		margin: 0 5px;
		line-height: 18px;
	}
	.userinfo-1366:hover ul {
		display: flex;
		flex-wrap: nowrap;
	}
}
@media only screen and (min-width: 1460px) and (max-width: 1921px) {
	.menubar {
		left: 380px;
		text-align: center;
		width: calc(100% - 700px);
	}
	.logo {
		width: 380px;
	}
}

.hometips {
	position: fixed;
	bottom: 10px;
	right: 10px;
	width: 320px;
	box-shadow: 0 2px 14px rgba(0,0,0,0.2);
}
.tips-header {
	padding: 10px 15px;
	background: #2bc0f9;
	color: #FFFFFF;
}
.tips-header .tips-title {
	font-size: 0.9rem;
	font-weight: normal;
	margin: 0;
	display: inline-block;
}
.tips-header .closed-tips {
	float: right;
	line-height: 22px;
	cursor: pointer;
	display: inline-block;
	transition: all .2s ease;
}
.tips-header .closed-tips:hover {
	transform: rotate(90deg);
}
.tips-body {
	background: #FFFFFF;
	border-top: none;
	padding: 8px 15px;
}
.tips-function {
	border-top: 1px dashed #E2E6EA;
	padding-top: 8px;
	text-align: right;
}
.tips-inner {
	min-height: 100px;
	padding: 10px 0;
}
.tips-function a {
	display: inline-block;
	margin-left: 10px;
	font-size: 13px;
	color: #f16019;
}
.tips-inner strong {
	color: #C82333;
}
