/**
* 网格地图-地图工具样式
*/
.content-block {
	width: 100%;
	height: calc(100% - 43px);
	padding: 20px 10px;
}
.no-padding {
	padding: 0;
}
.map-block {
	position: relative;
}
.warpper {
	height: 100%;
}
.btn2 {
	cursor: pointer;
}
.map-tabs {
	position: absolute;
	top: 20px;
	right: 20px;
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
.map-tabs .btn2 {
	background: #FFFFFF;
	padding: .6rem 1.2rem .7rem;
	color: #757575;
	border: none;
}
.map-tabs .btn2:hover,
.map-tabs .btn2.active {
	color: #3b93e5;
}
.btn-light {
	border-color: #DDDDDD;
}
.de {
	position: relative;
	display: inline-block;
	width: 22px;
	height: 22px;
	margin-bottom: -6px;
	margin-left: -11px;
}

.de:before {
	content: "";
	float: left;
	position: relative;
	width: 22px;
	height: 22px;
	background-image: url(../../images/index-icon.svg);
	background-repeat: no-repeat;
}
.de-map1,
.de-map2,
.de-map3 {
	margin-right: 2px;
	margin-left: 0;
}

.de-map1:before {
	background-position: -28px -194px;
}

.de-map2:before {
	background-position: -28px -218px;
}

.de-map3:before {
	background-position: -28px -242px;
}

.btn2:hover .de-map1:before,
.btn2.active .de-map1:before {
	background-position: -2px -194px;
}

.btn2:hover .de-map2:before,
.btn2.active .de-map2:before {
	background-position: -2px -218px;
}

.btn2:hover .de-map3:before,
.btn2.active .de-map3:before {
	background-position: -2px -242px;
}
