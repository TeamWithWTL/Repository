<!DOCTYPE html>
<html class="main">
<head>
	<title>社会组织-活动统计-首页</title>
	<meta charset="UTF-8">
	<link rel="stylesheet" type="text/css" href="${ctxPath}/assets/css/bootstrap.min.css" />
	<link rel="stylesheet" type="text/css" href="${ctxPath}/assets/vendor/bootstrap/css/bootstrap.css" />
	<link rel="stylesheet" type="text/css" href="${ctxPath}/assets/css/font-awesome.min.css" />
	<link rel="stylesheet" type="text/css" href="${ctxPath}/assets/css/main.css" />
	<link rel="stylesheet" type="text/css" href="${ctxPath}/assets/vendor/bootstrap-datetimepicker-master/css/bootstrap-datetimepicker.css"	/>
	<style type="text/css">
      .wrap{
        width: 180px; 
		white-space: nowrap;  
		text-overflow: ellipsis; 
		overflow: hidden; 
      }
    </style>
</head>

<body>
	<div class="function-box">
			<div class="content-form">
				<form class="form-inline" action="" method="post">
					<div class="form-group">
						<input type="text" class="form-control" id="name" placeholder="组织名称" value="${name ! ''}">
					</div>
					<div class='input-group date form_datetime' id='start'>
						<input type="text" class="form-control" id="startTime" placeholder="开始时间" readonly="readonly" value="${startTime ! firstday}">
						<span class="input-group-addon" style="margin-left: -10px;margin-right: 10px">
		            		<span class="fa fa-calendar" aria-hidden="true"></span>
		            	</span>
			        </div>
			        <div class='input-group date form_datetime' id='end'>
						<input type="text" class="form-control" id="endTime" placeholder="结束时间" readonly="readonly" value="${endTime ! lastday}">
						 <span class="input-group-addon" style="margin-left: -10px;margin-right: 10px">
		            		<span class="fa fa-calendar" aria-hidden="true"></span>
		            	</span>
			        </div>
					<div class="form-group">
						<button type="button" class="btn btn-primary" onclick="initData(1)"><i class="fa fa-search"></i> 查询</button>
					</div>
				</form>
			</div>
		 
			<div class="function-btn">
			</div>
			
		</div>
		<div id="table-container" class="warpper">
			@#ajax table:{
			<div class="table-box">
				<table class="table table-bordered table-striped" cellspacing="" cellpadding="">
					<thead>
					<tr class="table-secondary">
						<th width="5%" class="text-center">
							<input type="checkbox" class="i-checks" id="checkAll" onclick="selectAll(this)"/>
				        </th>
						<th width="20%" class="text-center">组织名称</th>
						<th width="15%" class="text-center">组织性质</th>
						<th width="15%" class="text-center">法人</th>
						<th width="15%" class="text-center">参与活动数量</th>
						<th class="text-center">操作</th>
					</tr>
					</thead>
					<tbody id="dqIds">
					@for(hdtj in pagenate.list ! []){
					<tr>
						<td class="text-center">
				        	<input type="checkbox" class="i-checks" name="icheck" value="${hdtj.id}" />
				        </td>
				        <td class="text-left" title="${hdtj.name ! ''}">
				        	<div class="wrap">
					        	<!-- <a href="javascript:void(0);" onclick="goView('${hdtj.id}')"> -->
					        		${hdtj.name ! ''}
					        	<!-- </a> -->
				        	</div>
				        </td>
				        @if(hdtj.zzxz == "01"){
				        <td>企业</td>
				        @}else if(hdtj.zzxz == "02"){
				        <td>社会团体</td>
				        @}
				        <td>${hdtj.fr_name ! ''}</td>
				        <td>${hdtj.sl}</td>
						<td><a href="javascript:void(0);" onclick="goView('${hdtj.id}')">活动反馈详情</a></td>
					</tr>
					@}elsefor{
					<tr>
				        <td colspan="6">
				        	没有找到要查询的数据
				        </td>
			    	</tr>
					@}
				   </tbody>
				</table>
			</div>	
			<!-- 自定义分页标签 -->
			<#pagenate func="initData" page="${pagenate}" />
		@}
	</div>
	
	<input type="hidden" id="basePath" value="${ctxPath}" />
	
	<!-- END MAIN CONTENT -->
	<script src="${ctxPath}/assets/vendor/jquery-1.12.4.min.js" type="text/javascript" charset="utf-8"></script>
	<script src="${ctxPath}/assets/vendor/bootstrap/js/bootstrap.min.js" type="text/javascript" charset="utf-8"></script>
	<script src="${ctxPath}/assets/vendor/holder.min.js" type="text/javascript" charset="utf-8"></script>
	<script type="text/javascript" src="${ctxPath}/assets/vendor/layer/layer.js"></script>
	
	<!-- 日期控件 -->
	<script src="${ctxPath}/assets/vendor/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.js" type="text/javascript"></script>
	<script src="${ctxPath}/assets/vendor/bootstrap-datetimepicker-master/js/locales/bootstrap-datetimepicker.zh-CN.js" type="text/javascript"></script>
	<script type="text/javascript" src="${ctxPath}/assets/vendor/layer/layer.js"></script>
	<script src="${ctxPath}/assets/scripts/shzz/hdtj/index.js"></script>
	<script src="${ctxPath}/assets/scripts/public.js"></script>
</body>
</html>