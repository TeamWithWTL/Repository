<!doctype html>
<html>

	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black">
		<link rel="stylesheet" href="${ctxPath}/assets/app/css/mui.min.css" />
		<link rel="stylesheet" href="${ctxPath}/assets/app/css/ionicons.min.css" />
		<link rel="stylesheet" href="${ctxPath}/assets/app/css/style.css" />>
	</head>

	<body>
		<header id="header" class="mui-bar mui-bar-nav">
			<a class="mui-action-back icon ion-android-arrow-back mui-pull-left"></a>
			<h1 class="mui-title" id="title">会议管理</h1>
			<!-- <button id="OpenQuery" class="mui-btn mui-btn-link icon ion-ios-search-strong mui-pull-right"></button> -->
		</header>

		<!-- <div class="inquery">
			<form class="mui-input-group">
				<div class="mui-input-row">
					<label>标题</label>
					<input type="text" class="mui-input-clear" placeholder="标题名称" id="titleId">
				</div>
				<div class="mui-button-row">
					<button type="button" class="mui-btn mui-btn-block mui-btn-primary" onclick="initEventData()"><i class="icon ion-ios-search-strong"></i> 点击查询</button>
				</div>
			</form>
		</div> -->
		<div class="mask-backdrop"></div>
		<div class="mui-slider-indicator mui-segmented-control mui-segmented-control-inverted">
			<a id="eventButton" class="mui-control-item mui-active" href="javascript:void(0)">待参加会议</a>
			<a id="recordButton" class="mui-control-item" href="javascript:void(0)">已结束会议</a>
		</div>
		<div class="mui-content mui-scroll-wrapper"  id="refreshContainer">
			<div class="mui-scroll" id="">
				<div class="listview-block" id="table-container">
				@#ajax table:{
					@for(content in pagenate.list ! []){
					<div class="mui-card">
						<!--页眉，放置标题-->
						<div class="mui-card-header">
							<div class="mui-checkbox">
								<input name="checkbox1" value="Item 1" type="checkbox">
							</div>
							<p>${content.title !}</p>
						</div>
						<!--内容区-->
						<div class="mui-card-content">
							<div class="mui-card-content-inner">
								<p class="card-label-row"><label>会议地点：</label><span>${content.venue !}</span></p>
								<p class="card-label-row"><label>开始时间：</label><span>${content.fmtStart_date !}</span><!-- <label>结束时间：</label><span>${content.fmtEnd_date !}</span> --></p>
								<p class="card-label-row"><label>结束时间：</label><span>${content.fmtEnd_date !}</span></p>
							</div>
						</div>
						<!--页脚，放置补充信息或支持的操作-->
						<div class="mui-card-footer"   id="container">  
							<a href="javascript:void(0)" name="${content.id}"><i class="icon ion-android-list"></i> 详情</a>
						</div>
					</div>
					<input type="hidden" id="pageCnts" value="${pageCnts}" />
					<input type="hidden" id="pageSize" value="${pageSize}" />
					@}
				@}
				</div>
			</div>
		</div>
		
		<input type="hidden" id="basePath" value="${ctxPath}" />

		<script src="${ctxPath}/assets/app/js/jquery-1.12.4.min.js"></script>
		<script type="text/javascript" src="${ctxPath}/assets/vendor/layer/layer.js"></script>
		<script src="${ctxPath}/assets/app/js/mui.min.js"></script>
		
		<script src="${ctxPath}/assets/scripts/xtbg/hygl/app/appIndex.js"></script>
		<script type="text/javascript" src="${ctxPath}/assets/scripts/app/pub/pubApp.js"></script>
		<script type="text/javascript">
			$(function() {
				$("#OpenQuery").click(function() {
					$(".mask-backdrop").toggle();
					$(".inquery").toggleClass("show");
				});
				$(".mask-backdrop").click(function() {
					$(this).hide();
					$(".inquery").removeClass("show");
				});
			});
		</script>
	</body>

</html>