<!DOCTYPE html>
<html>

	<head>
		<meta charset="utf-8">
		<meta http-equiv="Pragma" content="no-cache" />
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link rel="stylesheet" href="${ctxPath}/assets/app/css/mui.min.css" />
		<link rel="stylesheet" href="${ctxPath}/assets/app/css/ionicons.min.css" />
		<link rel="stylesheet" href="${ctxPath}/assets/app/css/login.css" />
	</head>

	<body>
		<div class="mui-content">
			<div class="logo">
				<img src="${ctxPath}/assets/app/img/login-logo.png"/>
			</div>
			<div class="login-box">
				<form action="index.html" method="post" id="loginForm">
					<div class="username">
						<i class="icon ion-ios-person-outline"></i>
						<input type="text" id="userName" name="userName" placeholder="用户名" />
					</div>
					<div class="password">
						<i class="icon ion-ios-locked-outline"></i>
						<input type="password" id="passWord" name="passWord" placeholder="密码"/>
					</div>
					<div class="remenber">
						<label>记住密码</label>
						<div class="mui-switch mui-switch-mini mui-active" id="rmbUser">
							<div class="mui-switch-handle"></div>
						</div>
					</div>
					<button type="button" class="submit" id="loginGo" onclick="saveUserInfo()">登 录</button>
				</form>
				<p id="registId"><a href="javascript:void(0)">新注册用户</a></p>
			</div>
		</div>
		<input type="hidden" id="basePath" value="${ctxPath}" />
		<script src="${ctxPath}/assets/app/js/jquery-1.12.4.min.js"></script>
		<script src="${ctxPath}/assets/app/js/jquery.cookie.js"></script>
		<script src="${ctxPath}/assets/app/js/mui.min.js"></script>
		<script type="text/javascript" src="${ctxPath}/assets/vendor/layer/layer.js"></script>
		<script src="${ctxPath}/assets/scripts/app/login/app_login.js"></script>
	</body>
	<script type="text/javascript">
		//首页返回1
		function anGoBack(){
			return 1;
		}
		// 版本更新
		if(typeof(toAndroid.jsCallAndroidUpdate)!="undefined"){
			var appversion = toAndroid.jsCallAndroidVersion();
			if ('${version}' != appversion) {
				toAndroid.jsCallAndroidUpdate('${appPath}');
			}				
		}
	</script>
</html>