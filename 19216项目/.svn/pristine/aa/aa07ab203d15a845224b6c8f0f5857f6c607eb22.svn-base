html {
	font-size: 14px;
}

input:-webkit-autofill {
	-webkit-box-shadow: 0 0 0px 1000px #ecf5fa inset !important;
}

html,
body {
	width: 100%;
	height: 100%;
	overflow: hidden;
}

body {
	background: url(../images/loginBG2.jpg) no-repeat center;
	background-size: cover;
	display: table;
}

.box-content {
	display: inline-block;
	width: 450px;
}

.logo {
	margin-top: -25px;
	margin-left: -50px;
}

.logo,
.login-box {
	width: 100%;
	text-align: center;
	margin-bottom: 30px;
}

.login-box {
	padding: 50px;
	background: #FFFFFF;
	border-radius: 6px;
	box-shadow: 0 4px 25px rgba(0, 0, 0, 0.1);
	text-align: left;
}

.warpper {
	width: 100%;
	height: 100%;
	display: table-cell;
	vertical-align: middle;
}

.warpper .container {
	height: 500px;
	text-align: right;
}

.login-box h2 {
	color: #b7883e;
	font-size: 20px;
	margin-top: 0;
	font-weight: normal;
	margin-bottom: 15px;
}

.login-box span {
	display: block;
	margin-bottom: 15px;
	position: relative;
}

.login-box span .form-control {
	height: 46px;
	padding-left: 40px;
	background: #ecf5fa;
	border: 1px solid #c1ceda;
}

.login-box span.vrcode .form-control {
	display: inline-block;
	width: 220px;
	margin-right: 6px;
}

.login-box span.vrcode img {
	width: 120px;
	height: 46px;
	background-color: #ecf5fa;
	border: 1px solid #c1ceda;
	border-radius: 4px;
	overflow: hidden;
}

.btn-submit {
	padding: 14px 62px;
	cursor: pointer;
	background: #449acb;
	color: #fff;
}

.btn-submit:hover {
	background: #2396d7;
}

.login-box span:before {
	content: "";
	position: absolute;
	width: 20px;
	height: 20px;
	left: 12px;
	top: 14px;
	background-image: url(../images/login-icon2.png);
	background-repeat: no-repeat;
	background-size: 20px auto;
}

.login-box span.username:before {
	background-position: 0 0;
}

.login-box span.password:before {
	background-position: 0 -20px;
}

.login-box span.vrcode:before {
	background-position: 0 -40px;
}

.download-app {
	position: absolute;
	right: 1rem;
	top: 1rem;
}

.download-app a.qrcode {
	width: 2.4rem;
	height: 2.4rem;
	display: block;
	background: url(../images/APP.svg) no-repeat;
	background-size: 2.4rem auto;
	cursor: pointer;
}

.download-app a.qrcode:hover {
	opacity: .7;
}

.mask {
	position: fixed;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, .6);
	z-index: 9;
	display: none;
}

.mask img {
	position: absolute;
	margin: auto;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
}